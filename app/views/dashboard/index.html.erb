<%= image_tag "#{@github_user.avatar_url}" %>
<h2> <%= @github_user.name %></h2>
<h3><%= @github_user.login %></h3>


<h3>Repositories <%= @github_user.repos(current_user.oauth_token).count %>
  <% @github_user.repos(current_user.oauth_token).each do |repo| %></h3>
<%= repo.name %><br>
<% end %>

<h3>Stars <%= @github_user.number_of_starred_repos(current_user.oauth_token) %></h3>

<h3>Followers <%= @github_user.followers(current_user.oauth_token).count %>
    <% @github_user.followers(current_user.oauth_token).each do |follower|  %></h3>
                      <%= follower.login %>
                      <% end %>
<h3>Following <%= @github_user.following(current_user.oauth_token).count %></h3>
    <% @github_user.following(current_user.oauth_token).each do |followed| %></h3>
                      <%= followed.login  %>
                      <% end  %>
<h3>Recent Activity<h3>   <% @github_user.events.each do |event| %></h3>
                      <%= event.repo[:name]%>, <%= event.type%>, <%= event.date %><br>
                      <% end %>
<h3>Organizations <%= @github_user.organizations(current_user.oauth_token).count %></h3>
<h2><%= link_to "Logout", logout_path, method: :delete %></h2>
<h2><%= link_to "Home page", root_path %></h2>
